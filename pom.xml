  <scm>
    <connection>scm:git:ssh://github.com:DS-WebSight/websight-resource-browser.git</connection>
    <developerConnection>scm:git:ssh://github.com:DS-WebSight/websight-resource-browser.git</developerConnection>
    <url>https://github.com/DS-WebSight/websight-resource-browser</url>
    <tag>1.0.3</tag>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
